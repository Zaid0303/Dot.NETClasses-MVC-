@model IEnumerable<database1.Models.Category>

@{
    ViewData["Title"] = "Showcat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ShowCategory</h1>

<p>
    <a asp-action="Addcat">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CatName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CatName)
            </td>
            <td>
                <a asp-action="Updatecat" asp-route-id="@item.CatId">Edit</a> |
                <a asp-action="Addcat" asp-route-id="@item.CatId">Add New</a> |
                <a asp-action="Deletecat" asp-route-id="@item.CatId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
